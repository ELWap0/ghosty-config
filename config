theme = Gruvbox Dark 
shell-integration= zsh
font-size=15
background-opacity=.8
cursor-style=block
shell-integration-features=no-cursor
split-divider-color=#ff6666

#tab control
keybind=ctrl+s>c=new_tab
keybind=ctrl+s>p=previous_tab 
keybind=ctrl+s>n=next_tab

##split
keybind=ctrl+s>5=new_split:right
keybind=ctrl+s>'=new_split:down
keybind=ctrl+s>z=toggle_split_zoom

keybind=performable:ctrl+k=goto_split:up
keybind=performable:ctrl+j=goto_split:down
keybind=performable:ctrl+h=goto_split:left
keybind=performable:ctrl+l=goto_split:right

keybind=alt+k=resize_split:up,10
keybind=alt+j=resize_split:down,10
keybind=alt+h=resize_split:left,10
keybind=alt+l=resize_split:right,10
keybind=ctrl+s>space=equalize_splits

keybind=alt+r=reload_config
keybind=ctrl+alt+k=scroll_page_up
keybind=ctrl+alt+j=scroll_page_down
